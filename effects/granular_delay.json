{
  "name": "Granular Delay",
  "description": "A granular delay effect where each grain is randomly pitch-shifted within a defined range, creating shimmering textures. The grains are read from a delay line, allowing for evolving soundscapes.",
  "audio": "audio/granular_delay.sc",
  "visual": "visual/neon_love.js",
  "params": [
    {
      "name": "grain_size",
      "value": 0.05,
      "range": [0.01, 0.2],
      "unit": "s"
    },
    {
      "name": "density",
      "value": 10,
      "range": [1, 50],
      "unit": "grains/s"
    },
    {
      "name": "delay_time",
      "value": 0.5,
      "range": [0.0, 2.0],
      "unit": "s"
    },
    {
      "name": "feedback",
      "value": 0.5,
      "range": [0.0, 0.95]
    },
    {
      "name": "pitch_shift_semitones",
      "value": 2,
      "range": [0, 12],
      "unit": "semitones"
    },
    {
      "name": "mix",
      "value": 0.5,
      "range": [0.0, 1.0]
    }
  ]
}